<Window x:Class="ConvolutionalMasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvolutionalMasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Original" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <Image x:Name="ImgOriginal"
                   Stretch="Uniform"
                   MaxHeight="700"
                   Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Column="1"
                    Width="220"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
            <Button Content="Display image"
                    Width="180"
                    Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,0,10"
                    Click="BtnDisplayImage_Click"/>
            <ComboBox x:Name="CmbImages"
                      Width="180"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,0,20"
                      SelectedValuePath="Content">
                <ComboBoxItem Content="Homer"/>
                <ComboBoxItem Content="Cat"/>
                <ComboBoxItem Content="Flowers"/>
            </ComboBox>

            <Button Content="Apply Convolutional Mask"
                    Width="180"
                    Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Margin="0,0,0,10"
                    Click="BtnApplyConvolution_Click"/>
            <ComboBox x:Name="CmbMasks"
                      Width="180"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,0,0"
                      SelectedValuePath="Content">
                <ComboBoxItem Content="Blur"/>
                <ComboBoxItem Content="Sharpen"/>
                <ComboBoxItem Content="Emboss"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Result" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <Image x:Name="ImgResult"
                   Stretch="Uniform"
                   MaxWidth="700"
                   MaxHeight="700"
                   HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>